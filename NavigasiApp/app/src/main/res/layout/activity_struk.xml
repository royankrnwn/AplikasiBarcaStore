<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Struk">

    <RelativeLayout
        android:id="@+id/checkOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkOut"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Nama     :"/>
        <TextView
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nama"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text=" Nama"/>

        <TextView
            android:id="@+id/telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="No.Telp :"/>
        <TextView
            android:id="@+id/txtTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/telp"
            android:layout_below="@+id/txtnama"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text=" No.Telp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Alamat  :"/>
        <TextView
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alamat"
            android:layout_below="@+id/txtTelp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text=" Alamat"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------------------------------------------------------------------------------------"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garis"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="3dp">

        <TextView
            android:id="@+id/namaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Product Name"/>
        <TextView
            android:id="@+id/txtNamaProduk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/namaProduk"
            android:layout_marginTop="10dp"
            android:text="Product Name"/>

        <TextView
            android:id="@+id/hargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/namaProduk"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Price"/>
        <TextView
            android:id="@+id/txtHarga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hargaProduk"
            android:layout_toRightOf="@+id/txtNamaProduk1"
            android:layout_weight="1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="Price"/>

        <TextView
            android:id="@+id/qtyProduk"
            android:layout_toLeftOf="@+id/totProduk"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Qty"/>
        <TextView
            android:id="@+id/txtQty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qtyProduk"
            android:layout_toLeftOf="@+id/txtTotHarga1"
            android:layout_weight="1"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:text="Qty"/>

        <TextView
            android:id="@+id/totProduk"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Total Harga"/>
        <TextView
            android:id="@+id/txtTotHarga1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totProduk"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="Total Harga"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="BAYAR"/>

    </RelativeLayout>





</RelativeLayout>